/* pages/record/index.wxss */
.infoImg {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  border: 10rpx solid gold;
  border-radius: 25%;
}
.infoName{
  width: 100%;
  height: 30rpx;
  text-align: center;
  vertical-align: center;
  line-height: 30rpx;
}
.exitBtn{
  width: 150rpx;
  position: fixed;
  top:90%;
  left: 50%;
  transform: translateX(-75rpx);
}
.search {
  width: 450rpx;
  height: 70rpx;
  border: 1rpx solid #ccc;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto;
}
.searchBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}
.searchBox text {
  text-align: center;
  vertical-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
.searchBtn {
  height: 74rpx;
  margin-top: 10rpx;
  color: white;
  font-size: 16px;
  background-color:royalblue;
  border-radius: 25px;
}
.main{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx auto;
}
.son{
  width: 25%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #ccc;
}
.main image{
  width: 25%;
  height: 80rpx;
}