/* pages/Home/index.wxss */
.textBox {
  width: 100%;
  height: 50rpx;
  background-color:  #30ebee
}
.text {
  /*微信小程序中文字水平垂直居中只能用flex布局*/
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  font-weight: bold;
  text-align: center;
  line-height: 50rpx;
  vertical-align: auto;
}
swiper {
  width: 100%;
  height: 300rpx;
  margin:0 auto;
}
.slide-image {
  width: 100%;
  height: 300rpx;
  margin: 0 auto;
}
.search {
  width: 450rpx;
  height: 70rpx;
  border: 1rpx solid #ccc;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto;
}
.searchBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}
.searchBox text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
.searchBtn {
  height: 74rpx;
  margin-top: 10rpx;
  color: white;
  font-size: 16px;
  background-color:royalblue;
  border-radius: 25px;
}
.mainBox {
  width: 100%;
  display: flex;
  align-content: space-around;
}
.mainBox text{
  margin-left: 20rpx;
  width: 350rpx;
  height: 100rpx;
  color: royalblue;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items:center;
}
.mainBox button{
    width: 200rpx;
    height: 60rpx;
    color: white;
    font-size: 16px;
    background-color:royalblue;
    border-radius: 25px;
    text-align: center;
    vertical-align: center;
    margin-top: 20rpx;
}
.moreBtn{
   margin-top: 20rpx;
}
.hot{
  display: flex;
  justify-content: center;
  align-items: center;
}