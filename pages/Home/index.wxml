<!--pages/Home/index.wxml-->
<view class="textBox">
<text class="text">开始愉快的学习吧！</text>
</view>
<swiper indicator-dots="{{indicatorDots}}"
 autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
 <block wx:for="{{imgUrls}}" wx:key="unique">
  <swiper-item>
   <image src="{{item}}" class="slide-image"/>
  </swiper-item>
 </block>
</swiper>
<view class="searchBox">
   <text>我想学:</text> 
   <input class="search" placeholder="请输入..." bindinput="getInput"></input> 
   <button class="searchBtn" bindtap="search">搜索</button>
</view>
<text class="hot">热门🔥</text>
<view class="mainBox" wx:for="{{booksList}}" wx:key="{{item.id}}">
  <text>{{item.book}}</text>
  <button bindtap="studyJs">开始学习!</button>
</view>
<view class="moreBtn">
  <button bindtap="dialog">查看更多 》》</button>
</view>
