/* pages/Form/index.wxss */
view{
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}
radio-group{
  margin: 10rpx;
  display: flex;
  align-content: space-around;
  justify-content: space-around;
}
textarea {
  width: 100%;
  height: 250rpx;
  border: 1px solid #ccc;
}
checkbox-group{
  margin: 10rpx;
  display: flex;
  justify-content: center;
}
.btn{
  display: flex;
  justify-content: space-around;
}
input{
  width: 100%;
  height: 50rpx;
  border: 1px solid #ccc;
}
.table{
  width: 100%;
  height: 60%;
  border:1px solid #ccc;
  border-radius: 5px;
}
.th{
  width: 100%;
  height: 100rpx;
  background-color: #66CCFF;
}
.tr{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-content: space-around;
  border: 1px solid #ccc;
}
.td{
  width: 49%;
  height: 80rpx;
}
switch{
  margin: 10rpx auto;
}